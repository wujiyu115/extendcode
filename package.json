{
  "name": "extendcode",
  "displayName": "extend_code",
  "description": "extendcode",
  "publisher": "wujiyu115",
  "version": "0.0.2",
  "repository":"https://github.com/wujiyu115/extendcode",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extendcode.wrapLog",
        "title": "wrapLog"
      },
      {
        "command": "extendcode.wrapCode",
        "title": "wrapCode"
      }
    ],
    "configuration": {
        "type": "object",
        "title": "extendcode",
        "properties": {
            "extendcode.wraplog_flag": {
                "type": "string",
                "default": true,
                "description": "open wrap log"
            },
            "extendcode.wraplog_str": {
              "type": "string",
              "default": "logD",
              "description": "wrap log string"
            },
            "extendcode.wrapcode_flag": {
              "type": "boolean",
              "default": true,
              "description": "open wrap code"
            },
            "extendcode.wrapstr": {
                "type": "string",
                "default": "log(\"log something: \\{${selectedText}\\}\", ${selectedText})",
                "description": "wrap string"
            }
        }
    },
    "menus": {
        "editor/context": [
            {
              "when": "editorHasSelection",
              "command": "extendcode.wrapLog",
              "alt": "extendcode.wrapLog",
              "group": "navigation"
            },
            {
                "when": "editorHasSelection",
                "command": "extendcode.wrapCode",
                "alt": "extendcode.wrapCode",
                "group": "navigation"
            }
        ]
    },
    "keybindings": [
        {
            "command": "extendcode.wrapCode",
            "key": "ctrl+alt+j",
            "mac": "cmd+alt+j",
            "when": "editorTextFocus"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "ts-loader": "^9.4.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "@vscode/test-electron": "^2.2.3"
  }
}
